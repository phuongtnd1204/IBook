             x:Class="IBook.View.PageAddBook">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="TÊN SÁCH"/>
            <Entry  />
            <Picker  Title="Chọn Tác Giả" ItemDisplayBinding="{Binding TenTacGia}">
            </Picker>
            <Picker  Title="Chọn Thể loại" ItemDisplayBinding="{Binding TenTheLoai}">
            </Picker>
            <Label Text="SỐ LƯỢNG"/>
            <Entry  Keyboard="Numeric"/>
            <Label Text="HÌNH"/>
            <Entry  />
            <Label Text="GIÁ"/>
            <Entry  Keyboard="Numeric"/>
            <Button Text="THÊM"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>